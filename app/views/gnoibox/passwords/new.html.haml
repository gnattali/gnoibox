.login-wrapper
  .box
    .content-wrap

      <h2>パスワードをリセット</h2>

      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!

        %div
          = f.email_field :email, autofocus: true, placeholder: 'メールアドレス'

        %div= f.submit "送信"
